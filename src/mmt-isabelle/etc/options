(* :mode=isabelle-options: *)

option mmt_consolidate_delay : real = 30
  -- "delay to consolidate status of command evaluation (execution forks)"

option mmt_prune_delay : real = 60
  -- "delay to prune history (delete old versions)"

option mmt_check_delay : real = 10
  -- "delay for theory status check during PIDE processing (seconds)"

option mmt_watchdog_timeout : real = 14400
  -- "watchdog timeout for PIDE processing of broken theories (seconds, 0 = disabled)"

option mmt_commit_cleanup_delay : real = 120
  -- "delay for cleanup of already imported theories (seconds, 0 = disabled)"

option mmt_load_limit : real = 5.0
  -- "limit in MB for loaded theory files (0 = unlimited)"

option mmt_type_checking : bool = false
  -- "explicit type-checking for imported items"

option mmt_proof_terms : bool = false
  -- "include full proof terms (not scalable)"

option mmt_messages : bool = false
  -- "include prover messages (warnings, errors, etc.)"


section "Meta info for default archive"

option mmt_archive_dir : string = "isabelle_test"
option mmt_archive_id : string = "Isabelle_Test"
option mmt_archive_title : string = "Isabelle Test"


section "Options for query command"

option mmt_query_narration_base : string = "https://isabelle.in.tum.de"
