<ACTIONS>
	<ACTION NAME="mmt-showinfo">
		<CODE>
		   jEdit.getPlugin("info.kwarc.mmt.jedit.MMTPlugin", true).showinfo(view);
		</CODE>
	</ACTION>
	<ACTION NAME="mmt-compile">
		<CODE>
		   jEdit.getPlugin("info.kwarc.mmt.jedit.MMTPlugin", true).compileCurrent(view);
		</CODE>
	</ACTION>
	<ACTION NAME="mmt-show">
		<CODE>
		   info.kwarc.mmt.jedit.Hider.show(textArea);
		</CODE>
	</ACTION>
	<ACTION NAME="mmt-hide">
		<CODE>
		   info.kwarc.mmt.jedit.Hider.hide(textArea);
		</CODE>
	</ACTION>
</ACTIONS>
