%namespace "http://cds.omdoc.org/logics/propositional/minimal/proof_theory.elf".
%namespace syntax = "syntax.elf".

%* Proof rules for Minimal propositional logic *%
%sig MPL = {
  %include syntax.MPL %open.
  syllog : ded (P ⇒ Q) ⇒ (Q ⇒ R) ⇒ (P ⇒ R).
  peirce : ded ((P ⇒ Q) ⇒ P) ⇒ P.
  weaken : ded P ⇒ (Q ⇒ P).
  contra : ded ⊥ ⇒ P.
  mp     : ded (P ⇒ Q) -> ded P -> ded Q.
}.  
